<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/imageViewProduit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="42dp"
            app:srcCompat="@drawable/placeholder" />

        <TextView
            android:id="@+id/labelProduit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@+id/imageViewProduit"
            android:layout_toEndOf="@+id/imageViewProduit"
            android:layout_marginStart="32dp" />

        <TextView
            android:id="@+id/labelPrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="20dp"
            android:layout_alignBottom="@+id/imageViewProduit"
            android:layout_alignStart="@+id/labelProduit" />

    </RelativeLayout>

</android.support.v7.widget.CardView>